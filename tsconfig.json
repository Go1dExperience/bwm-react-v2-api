{
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "dist",
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["*", "config/*", "lib/db/models"],
  "exclude": ["lib/db/migrations/*", "lib/db/seeders/*"]
}
